# Environment (development or production)
DJANGO_ENVIRONMENT=development

# Django Secret Key
# Generate a new key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY='your-secret-key-here'

# Allowed hosts (comma-separated list, required for production)
# Example: ALLOWED_HOSTS=example.com,www.example.com,192.168.1.1
ALLOWED_HOSTS=

# Database URL (optional, for PostgreSQL in production)
# Example: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# Security settings (for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Proxy/Load Balancer settings (set to True if behind nginx/Apache)
TRUST_PROXY_HEADERS=False

# Referrer Policy (same-origin, strict-origin-when-cross-origin, no-referrer, etc.)
SECURE_REFERRER_POLICY=same-origin

# Cross-Origin Opener Policy (same-origin, same-origin-allow-popups, unsafe-none)
SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin

# CSRF settings (for production)
# CSRF_TRUSTED_ORIGINS - comma-separated list of trusted origins for HTTPS POST requests
# Example: CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=

# CSRF_COOKIE_HTTPONLY - Set to True to prevent JavaScript access to CSRF cookie
CSRF_COOKIE_HTTPONLY=False

# CSRF_COOKIE_SAMESITE - Lax or Strict
CSRF_COOKIE_SAMESITE=Lax

# CSRF_COOKIE_AGE - Age of CSRF cookie in seconds (default: 1 year)
CSRF_COOKIE_AGE=31449600

# CORS settings (Cross-Origin Resource Sharing)
# Enable CORS only if you have a separate frontend (React, Vue, mobile app, etc.)
# CORS_ALLOWED_ORIGINS - comma-separated list of allowed origins
# Example: CORS_ALLOWED_ORIGINS=https://frontend.example.com,https://app.example.com
CORS_ALLOWED_ORIGINS=

# CORS_ALLOW_CREDENTIALS - Allow cookies/auth headers in cross-origin requests
CORS_ALLOW_CREDENTIALS=True

# CORS_ALLOWED_METHODS - comma-separated list of allowed HTTP methods
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# CORS_ALLOWED_HEADERS - comma-separated list of allowed headers (leave empty for defaults)
CORS_ALLOWED_HEADERS=

# CORS_EXPOSE_HEADERS - comma-separated list of headers exposed to browser
CORS_EXPOSE_HEADERS=

# Development CORS settings
ENABLE_CORS_IN_DEV=False
CORS_ALLOW_ALL_ORIGINS_DEV=True

# Email settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-password
DEFAULT_FROM_EMAIL=your-email@example.com

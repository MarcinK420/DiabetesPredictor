# Environment (development or production)
DJANGO_ENVIRONMENT=development

# Django Secret Key
# Generate a new key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY='your-secret-key-here'

# Allowed hosts (comma-separated list, required for production)
# Example: ALLOWED_HOSTS=example.com,www.example.com,192.168.1.1
ALLOWED_HOSTS=

# Database URL (optional, for PostgreSQL in production)
# Example: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# Security settings (for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Email settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-password
DEFAULT_FROM_EMAIL=your-email@example.com
